            <h2 class="card-title">Orders Ready To Eat</h2>
            <p class="card-text">This is the moment you have been waiting for. Your order is ready to be Devoured</p>
                    <li class="collection-item avatar"></li>
                    <span class="title">
                        {{this.id}}. {{this.burger_name}}</span>
                        <form action="/{{this.id}}?_method=PUT" method="POST">
                          <input type="hidden" name="id" value="{{this.devoured}}">
                          <br>
                          <button class="btn btn-primary"  type="submit">Eat Da Burger!</button>
                        </form>
                      </li>
                      {{/unless}} {{/each}}
                    </ul>
                  </div>
          </div>
        </div>
      </div>
